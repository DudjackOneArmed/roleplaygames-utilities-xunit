<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>xunit.assertation.extensions</PackageId>
    <Version>0.1.3-alpha</Version>
    <Authors>Ganoes</Authors>
    <RepositoryUrl>https://github.com/DudjackOneArmed/roleplaygames-utilities-xunit</RepositoryUrl>
    <Description>Extend xunit Assert class with Assert.That(...) methods</Description>
    <PackageReleaseNotes>
      - Async checks for async code were added
    </PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="xunit.assert.source" Version="2.4.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
